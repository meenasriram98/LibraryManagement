@model MiniProject.Library.Borrow

@{
    ViewBag.Title = "Lend";
    Layout = "~/Views/Admin/_AdminHomePage.cshtml";
}

<h2 style="color:greenyellow;margin-left:20px">Book Issue</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group" style="margin-left:10px">
            @Html.LabelFor(model => model.ISBNNO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ISBNNO, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.ISBNNO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left:10px">
            @Html.LabelFor(model => model.user_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.user_id, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Issue" class="btn btn-primary" />
                @{ if (ViewBag.ErrorMessage != null)
                    {
                        <h3 style="color:red">@ViewBag.ErrorMessage</h3>
                    }
                }
                @{ if (ViewBag.SuccessMessage != null)
                    {
                        <h3 style="color:forestgreen">@ViewBag.SuccessMessage</h3>
                    }
                }
            </div>
           
        </div>
    </div>
   
}

